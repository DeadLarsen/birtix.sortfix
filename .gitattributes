# Git attributes for proper package export

# Exclude development and documentation files from Composer package
/.github export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/tests export-ignore
/phpunit.xml export-ignore
/phpcs.xml export-ignore
/.editorconfig export-ignore
/CONTRIBUTING.md export-ignore
/EXAMPLES.md export-ignore
/PUBLISHING.md export-ignore

# Ensure consistent line endings
* text=auto

# PHP files
*.php text eol=lf
*.phtml text eol=lf

# Configuration files
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary

# SQL files
*.sql text eol=lf

# Force LF for CLI scripts (important for Unix/Linux execution)
cli/* text eol=lf 